{
  "name": "bleeps-web",
  "version": "0.0.1",
  "description": "Frontend for bleeps.",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "abitype": "^1.0.0",
    "eip-1193": "^0.4.7",
    "ipfs-gateway-emulator": "4.2.1-ipfs.2",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.1",
    "pwag": "0.2.0",
    "svelte": "^4.2.10",
    "svelte-check": "^3.6.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@noble/ciphers": "^0.5.1",
    "@scure/base": "^1.1.5",
    "@types/lodash-es": "^4.17.12",
    "bleeps-common": "workspace:*",
    "bleeps-indexer": "workspace:*",
    "ethereum-indexer-browser": "^0.7.0",
    "ethereum-tx-observer": "^0.0.5",
    "immer": "^10.0.3",
    "lodash-es": "^4.17.21",
    "lz-string": "^1.5.0",
    "named-logs": "^0.2.2",
    "radiate": "^0.0.2",
    "theme-change": "^2.5.0",
    "viem": "^2.7.9",
    "web3-connection": "^0.1.31",
    "web3-connection-viem": "^0.1.3"
  },
  "scripts": {
    "prepare": "pwag static/icon.svg src/web-config.json",
    "dev": "echo 'waiting for src/data/contracts.ts...'; wait-on src/data/contracts.ts && ldenv vite dev",
    "build": "npm run prepare && ldenv vite build",
    "preview": "ldenv vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "svelte-check": "svelte-check",
    "serve": "ipfs-emulator --only -d build -p 8080"
  }
}